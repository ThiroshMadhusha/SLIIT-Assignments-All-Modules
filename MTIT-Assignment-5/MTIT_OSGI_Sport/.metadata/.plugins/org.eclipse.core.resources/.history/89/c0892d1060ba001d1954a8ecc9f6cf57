package sport_items_delivery_consumer;

import java.util.List;
import java.util.Scanner;

import org.osgi.framework.BundleActivator;
import org.osgi.framework.BundleContext;
import org.osgi.framework.ServiceReference;
import sport_items_delivery_producer.DeliveryActivaterService;


public class Activator implements BundleActivator {

	 
	ServiceReference TransportService;
	Scanner input = new Scanner(System.in);


	boolean exit = false;

	@Override
	public void start(BundleContext context) throws Exception {//life cycle method Start
		
		System.out.println("----Delivery Sport Items Consumer Started-----");
		
		TransportService = context.getServiceReference(DeliveryActivaterService.class.getName());
		
		@SuppressWarnings("unchecked")
		DeliveryActivaterService  deliveryActivaterService = (DeliveryActivaterService) context.getService(TransportService);
		
		do {
		int selection = 7;
		do {
		System.out.println("----------------------------Welcome to Mobile Care System-------------------------------");
	
		System.out.println("Please Select an option to continue.....");
		System.out.println("================Options=================");
		System.out.println("1.Calculate the Transport service chargers ");
		System.out.println("2.Remove an exsisiting Transport detail From List");
		System.out.println("3.List Of Transport Details");
		System.out.println("4.Search Transport Details By Name");
		System.out.println("5.Exit to Transport Interface");
		System.out.println();
		System.out.println("Enter your selection...");
		 selection = input.nextInt();
		
		 input.nextLine();
		 if(selection == 5) {
			 exit = true;
		 }
		 
		 if(selection !=1 &&  selection !=2 && selection !=3 && selection !=4 && selection!=5) {
			 System.out.println("Please enter a valid selection");
		 }
		}while(selection !=1  && selection !=2 && selection !=3 && selection !=4 && selection!=5 );
		
	
        String  backToHome = null;
		if (selection == 1) {//Handles the adding process of new phones to the stock
			do {
			System.out.println("Enter the Transport Name");
			String Transport_name = input.nextLine();

			System.out.println("Enter the Transport Location");
			String Transport_location = input.nextLine();

			System.out.println("Enter The Transport Location Distance (K.M)");
			String Transport_Item = input.nextLine();
			input.nextLine();
			
			int result =transportActivaterService.addItems(Transport_name, Transport_location, Transport_Item);//Consumes the ManagerService addItems()
			 String msg = (result ==1) ? "Successfully added the item!" :"please enter a valid name";
			   System.out.println(msg);
			System.out.println("Press 0 to navigate back to home or press any other key to continue....");
			
			backToHome=input.nextLine();
			
			}
			
			while(!(backToHome.equals("0")));

		}
		else if (selection == 2) {//Handles the removing process of an existing phones from the stock 
			do {
			System.out.println("Enter the item name:");

			String Transport_Name = input.nextLine();
			int result =transportActivaterService.removeItems1(Transport_Name);
			   String msg = (result ==1) ? "Successfully Removed the item!" :"please enter a valid name";
			   System.out.println(msg);
              System.out.println("Press 0 to navigate back to home or press any other key to continue....");
			
			backToHome=input.nextLine();
			
			}
			
			while(!(backToHome.equals("0")));

		}
		else if(selection == 3) {//Handles displaying all items in the list
			do {
				List<Transport> itemsList =transportActivaterService.listItems();
				System.out.println("-----------------------------------Item list--------------------------------------------");
				System.out.println("Item ID:"+"\t" +"Transport Name:"+"\t" + "Transport Loction:"+"\t" + "Trasport Price:"+"\t" );
				
			for(Transport tempItem: itemsList ) {
				System.out.println(tempItem.getPhoneID()+"\t         "+tempItem.getTransportName()+"\t         "+tempItem.getTransportLocation()+"\t         "+tempItem.getDeliveryChargers()+"\t              \n");
								
			}
			System.out.println("-----------------------------------------------------------------------------------------");
            System.out.println("Press 0 to navigate back to home or press any other key to continue....");
			
			backToHome=input.nextLine();
			
			}
			
			while(!(backToHome.equals("0")));

		}
		else if(selection == 4) {
			do {
			
			System.out.println("Enter the item name");
			

			String Transport_Name = input.nextLine();
			int result =transportActivaterService.searchitems(Transport_Name);
			 String msg = (result ==1) ? "Item found!" :"Item not found!";
			   System.out.println(msg);
			
			System.out.println("Press 0 to navigate back to home or press any other key to continue....");
			
			backToHome=input.nextLine();
			
			}
			
			while(!(backToHome.equals("0")));
		}
		else if(selection == 5) {//Exits form the Manager consumer program
			return;
		}
	}while(!exit);
	}
	
	@Override
	public void stop(BundleContext context) throws Exception {//stop life cycle method
		System.out.println("============Transport consumer stopped.============");
		context.ungetService(TransportService);
	}

}